CREATE TABLE PACIENTES (
UUIDPaciente VARCHAR2(100) PRIMARY KEY,
UUIDMedicamentos VARCHAR2(100) NOT NULL,
UUIDEnfermedades VARCHAR2(100) NOT NULL,
UUIDHabitacion VARCHAR2(100) NOT NULL,
UUIDCama VARCHAR2(100) NOT NULL,
Nombre VARCHAR2 (50) NOT NULL,
Apellido VARCHAR2 (50) NOT NULL,
Edad INT NOT NULL,
Fecha_nacimiento VARCHAR2 (50) NOT NULL,
Hora_medicamento VARCHAR2 (75) NOT NULL,
CONSTRAINT fk_uuidmedicamentos FOREIGN KEY (UUIDMedicamentos) 
REFERENCES MEDICAMENTOS (UUIDMedicamentos),
CONSTRAINT fk_uuidenfermedad FOREIGN KEY (UUIDEnfermedades) 
REFERENCES ENFERMEDADES (UUIDEnfermedades),
CONSTRAINT fk_uuid_habitacion FOREIGN KEY (UUIDHabitacion) 
REFERENCES HABITACIONES (UUIDHabitacion),
CONSTRAINT fk_uuid_cama FOREIGN KEY (UUIDCama)
REFERENCES CAMAS (UUIDCama)
);

DROP TABLE PACIENTES

SELECT * FROM PACIENTES;

CREATE TABLE MEDICAMENTOS (
UUIDMedicamentos VARCHAR2(100) PRIMARY KEY,
Medicamento VARCHAR2 (70) NOT NULL
);

