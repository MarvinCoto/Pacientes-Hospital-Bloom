<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardElevation="4dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="15dp"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="101dp"
    android:backgroundTint="#C8ECFF"
    tools:context=".activity_card_pacientes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtNombrePaciente"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:text="TextView"
            android:textColor="#02A5BA"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imgEditar"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_editar" />

        <ImageView
            android:id="@+id/imgBorrar"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_eliminar" />

    </LinearLayout>


</androidx.cardview.widget.CardView
    >